<configuration>
    <property name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}" />
    <property name="LOG_FORMAT" value="${LOG_FORMAT:-plain}" />
    <property name="LOG_STACKTRACE" value="${LOG_STACKTRACE:-false}" />

    <appender name="PLAIN" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <if condition='"${LOG_FORMAT}".equalsIgnoreCase("json")'>
        <then>
            <root level="${LOG_LEVEL}">
                <appender-ref ref="JSON" />
            </root>
        </then>
        <else>
            <root level="${LOG_LEVEL}">
                <appender-ref ref="PLAIN" />
            </root>
        </else>
    </if>
</configuration>
